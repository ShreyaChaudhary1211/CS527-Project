>, <Line: +public class ConnectionTest {
>, <Line: +  /**
>, <Line: +   * Tests correct implementation of get length.
>, <Line: +   */
>, <Line: +  @Test
>, <Line: +  public void testGetLength() {
>, <Line: +    final Point a = new Point(0, 0);
>, <Line: +    final Point b = new Point(10, 0);
>, <Line: +    assertEquals(10, Connection.create(a, b).getLength(), GraphRoadModel.DELTA);
>, <Line: +    final Connection<MultiAttributeData> conn =
>, <Line: +        Connection.create(a, b, MultiAttributeData.builder()
>, <Line: +            .setLength(12)
>, <Line: +            .setMaxSpeed(1d)
>, <Line: +            .build());
>, <Line: +    assertEquals(12, conn.getLength(), GraphRoadModel.DELTA);
>, <Line: +    final Connection<MultiAttributeData> conn2 =
>, <Line: +        Connection.create(a, b, MultiAttributeData.builder()
>, <Line: +            .setMaxSpeed(1d)
>, <Line: +            .build());
>, <Line: +    assertEquals(10, conn2.getLength(), GraphRoadModel.DELTA);
>, <Line: +  }
>, <Line: +}
